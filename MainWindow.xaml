<Window x:Class="ExplorerWpfApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ExplorerWpfApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <ListBox x:Name="ListFiles" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="10,66,94,10" MouseDoubleClick="ListBox1_MouseDoubleClick" FontWeight="Normal"/>
        <TextBox x:Name="FileWay" HorizontalAlignment="Left" Margin="42,28,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="647" KeyDown="FileWay_KeyDown">G:\</TextBox>
        <Button x:Name="ButtonBack" Content="←" HorizontalAlignment="Left" Margin="10,27,0,0" VerticalAlignment="Top" Height="19" Width="18" FontWeight="Bold" FontSize="14" FontFamily="Arial Black" Click="ButtonBack_Click"/>

    </Grid>
</Window>
